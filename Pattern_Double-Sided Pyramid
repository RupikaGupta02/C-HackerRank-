#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    
    if (n < 2) {
        printf("Shape Not Possible");
        return 0;
    }

    
    for (int i = 1; i <= n; i++) {
    
        for (int j = i; j < n; j++) {
            printf(" ");
        }

    
        for (int j = 1; j <= i; j++) {
            printf("*");
        }

    
        printf("  ");

    
        for (int j = 1; j <= i; j++) {
            printf("*");
        }

        printf("\n");
    }

    return 0;
}
